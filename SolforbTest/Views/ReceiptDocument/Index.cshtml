@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SolforbTest.ViewModels.ReceiptDocumentIndexViewModel
@{
    ViewData["Title"] = "Список документов поступления";
}
<h2>Список документов поступления</h2>

<form method="get" class="card card-body mb-3">
    <div class="row g-3 align-items-end">
        <div class="col-md-2">
            <label class="form-label">Дата с</label>
            <input type="date" name="dateFrom" value="@Model.DateFrom?.ToString("yyyy-MM-dd")" class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Дата по</label>
            <input type="date" name="dateTo" value="@Model.DateTo?.ToString("yyyy-MM-dd")" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Номера документов</label>
            <select id="numbers" name="numbers" class="form-select js-multi" multiple size="5">
                @foreach (var n in Model.NumberOptions)
                {
                    <option value="@n.Value" selected="@(n.Selected)">@n.Text</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Ресурсы</label>
            <select id="resources" name="resources" class="form-select js-multi" multiple size="5">
                @foreach (var r in Model.ResourceOptions)
                {
                    <option value="@r.Value" selected="@(r.Selected)">@r.Text</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <label class="form-label">Ед. изм.</label>
            <select id="units" name="units" class="form-select js-multi" multiple size="5">
                @foreach (var u in Model.MeasurementUnitOptions)
                {
                    <option value="@u.Value" selected="@(u.Selected)">@u.Text</option>
                }
            </select>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Фильтровать</button>
        <a asp-action="Index" class="btn btn-secondary">Сбросить</a>
        <a class="btn btn-success ms-auto" asp-action="Create">Добавить документ</a>
    </div>
</form>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Id</th>
            <th>Номер</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Documents)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Number</td>
            <td>@item.Date.ToShortDateString()</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Удалить документ?');">Удалить</button>
                </form>
            </td>
        </tr>
        if (item.ReceiptResources != null && item.ReceiptResources.Any())
        {
            <tr>
                <td></td>
                <td colspan="3">
                    <table class="table table-sm mb-4">
                        <thead>
                            <tr>
                                <th>Ресурс</th>
                                <th>Ед. изм.</th>
                                <th class="text-end">Кол-во</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var line in item.ReceiptResources)
                        {
                            <tr>
                                <td>@(line.Resource?.Name ?? line.ResourceId.ToString())</td>
                                <td>@(line.MeasurementUnit?.Name ?? line.MeasurementUnitId.ToString())</td>
                                <td class="text-end">@line.Quantity</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    }
    </tbody>
</table>

@section Scripts {
<script>
    $(function() {
        $('.js-multi').select2({ width: '100%' });
    });
</script>
}
