@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<SolforbTest.Domain.ReceiptDocument>
@{
    ViewData["Title"] = "Список документов поступления";
}
<h2>Список документов поступления</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Добавить документ</a>
<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Id</th>
            <th>Номер</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Number</td>
            <td>@item.Date.ToShortDateString()</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Удалить документ?');">Удалить</button>
                </form>
            </td>
        </tr>
        if (item.ReceiptResources != null && item.ReceiptResources.Any())
        {
            <tr>
                <td></td>
                <td colspan="3">
                    <table class="table table-sm mb-4">
                        <thead>
                            <tr>
                                <th>Ресурс</th>
                                <th>Ед. изм.</th>
                                <th class="text-end">Кол-во</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var line in item.ReceiptResources)
                        {
                            <tr>
                                <td>@(line.Resource?.Name ?? line.ResourceId.ToString())</td>
                                <td>@(line.MeasurementUnit?.Name ?? line.MeasurementUnitId.ToString())</td>
                                <td class="text-end">@line.Quantity</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
